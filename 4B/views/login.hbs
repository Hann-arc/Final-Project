<div class="form">
    <h1 class="title-form">Login</h1>
    <form action="/auth/login" method="post" >
        <div>
            <input type="email" id="email" name="email" placeholder="" class="form-input">
            <label  class="all-label" for="email">Email</label>
        </div>
        <div>
            <input type="password" id="password" name="password" placeholder="" class="form-input">
            <label  class="all-label" for="password">Password</label>
        </div>
        <div>
            <button id="btn-1" type="submit">Send Message</button>
        </div>
    </form>
</div>
