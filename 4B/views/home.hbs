<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />

  <link rel="stylesheet" href="/assets/css/style.css">

</head>
<body>
    <!-- NAVBAR -->
   
 {{> navbar}}
<!-- NAVBAR END -->

<div class="dropdown-btn">
<!-- DROPDOWN MENU -->

    <div class="dropdown">
        <button class="dropbtn">Provinsi</button>
        <div class="dropdown-content">
            {{#each provinsis}}
               <a href="">{{name}}</a>
               {{/each}}
        </div>
    </div>
    <!-- Dropdown Menu End -->

    <div class="for-btn">
        <a type="button" href="/form/provinsi" class="btn btn-outline-info">Add Provinsi</a>
        <a type="button" href="/form/kabupaten" class="btn btn-outline-info">Add Kabupaten</a>
    </div>

</div>
    <!-- Card -->
    <div class="card-container">
        {{#each kabupatens}}
       <div class="warp-card">
            <div class="card">
                <div class="card-actions">
                <button class="toggle">...</button>
                <div class="edit-delete-buttons">
                    <a href="/edit-kabupaten/{{id}}" class="btn text-light edit">Edit</a>
                    <a href="/delete-kabupaten/{{id}}" class="btn text-light  delete">Delete</a>
                </div>
            </div>
                <img src="/uploads/{{image}}" style="width: 208px; height: 219px; object-fit: cover;" alt="Logo" class="card-logo">
                <h2 class="card-title">{{name}}</h2>
                <p class="card-subtitle">{{diresmikan}}</p>
                
            </div>
            <a target="_blank" href="/detail/kabupaten/{{id}}"><button class="card-button">Detail</button></a>
        </div> 
        {{/each}}
        {{#each provinsis}}
        <div class="warp-card">
            <div class="card">
                <div class="card-actions">
                <button class="toggle">...</button>
                <div class="edit-delete-buttons">
                    <a class="btn text-light edit">Edit</a>
                    <a href="/delete-provinsi/{{id}}" class="btn text-light  delete">Delete</a>
                </div>
            </div>
                <img src="/uploads/{{image}}" style="width: 208px; height: 219px; object-fit: cover;" alt="Logo" class="card-logo">
                <h2 class="card-title">{{name}}</h2>
                <p class="card-subtitle">{{diresmikan}}</p>
                <P style="color: gray;">Author : {{this.user.username}}</P>
            </div>
            <a target="_blank" href="/detail/provinsi/{{id}}"><button class="card-button">Detail</button></a>
        </div>
        {{/each}}
        
    </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>